        <item name="colorControlActivated">@color/colorDarkBlue</item>
        <!--<item name="android:columnWidth">50dp</item>-->
    </style>

    <style name="RatingBarSmall2" parent="android:style/Widget.Material.RatingBar.Small">
        <item name="colorControlNormal">@color/colorGrey</item>
        <item name="colorControlActivated">@color/colorDarkBlue</item>
    </style>

    <!--<style name="RatingBarSmall" parent="android:style/Widget.Material.RatingBar.Small">-->
