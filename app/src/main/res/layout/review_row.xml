<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/layout_division_small">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <!--<TableRow>-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/review_usuario"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:textStyle="bold|italic"
                android:textColor="@color/colorPrimaryDark"
                style="?android:attr/textAppearanceMedium"

                tools:context=".Review2Adapter"
                />
            <!--android:padding="16px"-->
        <!--android:textSize="15px"-->
            <!--android:textAppearance="@style/TextAppearance.AppCompat.Medium"-->
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/review_calificacion"
                style="?android:attr/ratingBarStyleSmall"
                android:numStars="5"
                android:isIndicator="true"
                android:layout_marginTop="7dp"
                tools:context=".Review2Adapter"

                />
        <!--android:theme="@style/RatingBarSmall2"-->
    <!--android:theme="@style/RatingBar"-->
        <!--</TableRow>-->
    </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/review_comentario"

            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"
            android:textColor="@color/colorPrimaryDark"
            style="?android:attr/textAppearanceSmall"
            tools:context=".Review2Adapter"
            />
    <!--android:padding="20px"-->
    <!--android:textSize="15px"-->



